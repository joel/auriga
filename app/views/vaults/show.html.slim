- model_class = Vault
.page-header
  h1=t '.title', :default => model_class.model_name.human

p
  strong= model_class.human_attribute_name(:_id) + ':'
  br
  = @vault._id
p
  strong= model_class.human_attribute_name(:subdomain) + ':'
  br
  = @vault.subdomain

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vaults_path, :class => 'btn'
  | &#xA0;
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vault_path(@vault), :class => 'btn btn-primary'
  | &#xA0;
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vault_path(@vault), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
